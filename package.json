{
	"name": "electron-boilerplate",
	"version": "1.0.3",
	"description": "A minimal Electron boilerplate starter",
	"main": "src/main/main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"build:mac": "electron-builder --mac",
		"build:win": "electron-builder --win",
		"build:all": "electron-builder -mw",
		"test": "sh scripts/test.sh",
		"watch": "sh scripts/watch.sh",
		"setup-hooks": "sh scripts/setup-hooks.sh"
	},
	"keywords": [
		"electron",
		"boilerplate"
	],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"devDependencies": {
		"electron": "latest",
		"electron-builder": "latest",
		"nodemon": "latest"
	},
	"build": {
		"appId": "com.electron.boilerplate",
		"files": [
			"src/**",
			"node_modules/**",
			"package.json"
		],
		"mac": {
			"target": [
				"dmg",
				"zip"
			],
			"executableName": "electron-boilerplate"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"forceCodeSigning": false,
			"signAndEditExecutable": false,
			"executableName": "electron-boilerplate"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"dependencies": {
		"trash": "^10.1.0"
	}
}
